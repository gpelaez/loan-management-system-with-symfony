{% extends 'base.html.twig' %}

{% block title %} Loans {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block navblock %}
    {{ parent() }}

    <form class="nav navbar-form navbar-left" action="" method="post">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Loans" name="search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
    <ul class="nav navbar-nav navbar-right">
        <li><a href={{ path('loanComplete') }}>Completed Loans</a></li>
        <li><a href={{ path('loanAdd') }}>Add Loans</a></li>
    </ul>

{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div>
        <main>
            <center>
                <h3>Loans</h3>
                <div class="container">
                    <div class="row" style="overflow: auto; white-space: nowrap">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Loan Code</th>
                                <th>Customer Name</th>
                                <th>Customer NIC</th>
                                <th>Loan Amount</th>
                                <th>Started Date</th>
                                <th>Interest</th>
                                <th>Period</th>
                                <th>isComplete</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for loan in loans %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ loan.loanCode }}</td>
                                    <td>{{ loan.customer.name }}</td>
                                    <td>{{ loan.customer.nic }}</td>
                                    <td>{{ loan.loanAmount }}</td>
                                    <td>{{ loan.startedDate|date('Y-m-d') }}</td>
                                    <td>{{ loan.interest }}</td>
                                    <td>{{ loan.period }}</td>
                                    <td>{{ loan.isComplete }}</td>
                                    <td><a class="btn btn-default btn-sm"
                                           href={{ path('loanView', {'id': loan.id}) }}>View</a></td>
                                    <td><a class="btn btn-default btn-sm"
                                           href={{ path('loanEdit', {'id': loan.id}) }}>Edit</a></td>
                                    <td>
                                        <form action="{{ path('witness') }}" method="post">
                                            <button type="submit" class="btn btn-default btn-sm" name="loanId"
                                                    value="{{ loan.id }}">Witnesses
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="{{ path('installment') }}" method="post">
                                            <button type="submit" class="btn btn-default btn-sm" name="loanId"
                                                    value="{{ loan.id }}">Installments
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(loans) }}
                </div>
            </center>
        </main>
    </div>

    <script>

    </script>

{% endblock %}