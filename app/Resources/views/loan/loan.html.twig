{% extends 'base.html.twig' %}

{% block title %} Loans {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block navblock %}
    {{ parent() }}

    <form class="nav navbar-form navbar-left" action="" method="post">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Loans" name="search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
    <ul class="nav navbar-nav navbar-right">
        <li><a href={{ path('loanComplete') }}>Completed Loans</a></li>
        <li><a href={{ path('loanAdd') }}>Add Loans</a></li>
    </ul>

{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div>
        <main>
            <center>
                <h3>Loans</h3>
                <div class="container">
                    <div class="row" style="overflow: auto; white-space: nowrap">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Loan Code</th>
                                <th>Customer</th>
                                <th>Loan Amount</th>
                                {#<th>Total Amount</th>#}
                                <th>Started Date</th>
                                <th>Weekly Payment</th>
                                <th>Total Payment</th>
                                <th>Areas Amount</th>
                                <th>Last Installment</th>
                                {#<th>Interest</th>#}
                                {#<th>Period</th>#}
                                {#<th>isComplete</th>#}
                                {#<th>Area</th>#}
                                {#<th></th>#}
                            </tr>
                            </thead>
                            <tbody>
                            {% for loan in form.loans %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ form(loan.loanCode) }}</td>
                                    <td>{{ form(loan.customer) }}</td>
                                    <td>{{ form(loan.loanAmount) }}</td>
                                    {#<td>{{ form(loan.totalAmount) }}</td>#}
                                    <td>{{ form(loan.startedDate) }}</td>
                                    <td>{{ form(loan.weeklyPayment) }}</td>
                                    <td>{{ form(loan.totalPayment) }}</td>
                                    <td>{{ form(loan.areasAmount) }}</td>
                                    <td>{{ form(loan.lastInstallmentAmount) }}</td>
                                    {#<td>{{ form(loan.interest) }}</td>#}
                                    {#<td>{{ form(loan.period) }}</td>#}
                                    {#<td>{{ form(loan.isComplete) }}</td>#}
                                    {#<td>{{ form(loan.area) }}</td>#}
                                    <td><a class="btn btn-default btn-xs"
                                           href={{ path('loanView', {'id': loan.id.vars.value}) }}>View</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div>{{ form_row(form.save) }}</div>
                </div>
                {#<div class="navigation">#}
                {#{{ knp_pagination_render(loans) }}#}
                {#</div>#}
            </center>
        </main>
    </div>

    <script>

    </script>

{% endblock %}