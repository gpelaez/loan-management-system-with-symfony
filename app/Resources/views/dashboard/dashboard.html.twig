{% extends 'baseDashboard.html.twig' %}

{% block title %} Dashboard {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .quick-actions_homepage {
            width: 100%;
        }

        .quick-actions {
            display: inline-block;
        }

        .area-blocks {
            background: #F6F6F6;
            border: 2px solid #D5D5D5;
            display: inline-block;
            margin: 10px;
            padding: 10px;
            border-radius: 8px;
        }

        .area-blocks:hover {
            background: #fff;
        }

        .total-values {
            display: block;
            padding: 8px;
        }

        .total-values div {
            color: #666666;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block navblock %}
    {{ parent() }}

    <ul class="nav navbar-nav navbar-right">
        <li><a href={{ path('adminChangePassword', {'adminId':1}) }}>Admin</a></li>
        <li><a href={{ path('logout') }}>Logout</a></li>
    </ul>

{% endblock %}

{% block body %}
    {{ parent() }}

    <div>
        <main>
            <center>
                <hr>
                <h2>Southern-Lanka</h2>
                <h5>Micro-Credit Service</h5>
                <hr>
                <br><br>
                <div class="container">
                    <div>
                        <div class="quick-actions_homepage">
                            <div class="row">
                                <div class="quick-actions">
                                    {% for area in areas %}
                                        <div class="area-blocks"><a href="{{ path('loan', {'areaId': area.id}) }}"
                                                                    style="text-decoration: none"><span
                                                        class="glyphicon glyphicon-stats" aria-hidden="true"></span>
                                                <span><b>Area-0{{ area.id }}</b></span>
                                                <div class="total-values">
                                                    <div>
                                                        <span>Total Amount: {{ total[area.id][0] }}</span>
                                                    </div>
                                                    <div>
                                                        <span>Total Payment: {{ total[area.id][1] }}</span>
                                                    </div>
                                                    <div>
                                                        <span>Total Last Installment: {{ total[area.id][2] }}</span>
                                                    </div>
                                                </div>
                                            </a></div>
                                    {% endfor %}
                                </div>
                                </ul>
                            </div>
                        </div>
                    </div>
            </center>
        </main>
    </div>

    <script>

    </script>

{% endblock %}