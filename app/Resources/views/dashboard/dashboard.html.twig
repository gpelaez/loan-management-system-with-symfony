{% extends 'baseDashboard.html.twig' %}

{% block title %} Dashboard {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block navblock %}
    {{ parent() }}

    <ul class="nav navbar-nav navbar-right">
        <li><a href={{ path('adminChangePassword', {'adminId':1}) }}>Admin</a></li>
        <li><a href={{ path('logout') }}>Logout</a></li>
    </ul>

{% endblock %}

{% block body %}
    {{ parent() }}

    <div>
        <main>
            <center>
                <hr>
                <h2>Southern-Lanka</h2>
                <h5>Micro-Credit Service</h5>
                <hr>
                <br><br>
                <div class="container">
                    <div>
                        <div class="quick-actions_homepage">
                            <div class="row">
                                <div class="quick-actions">
                                    {% for area in areas %}
                                        <div class="area-blocks"><a href="{{ path('loan', {'areaId': area.id}) }}"
                                                                    style="text-decoration: none"> <i
                                                        class="icon-cabinet"></i>
                                                <span>Area-0{{ area.id }}</span>
                                                <div class="total-values">
                                                    <div>
                                                        <span>Total Amount: {{ total[area.id][0] }}</span>
                                                    </div>
                                                    <div>
                                                        <span>Total Payment: {{ total[area.id][1] }}</span>
                                                    </div>
                                                    <div>
                                                        <span>Total Last Installment: {{ total[area.id][2] }}</span>
                                                    </div>
                                                </div>
                                            </a></div>
                                    {% endfor %}
                                </div>
                                </ul>
                            </div>
                        </div>
                    </div>
            </center>
        </main>
    </div>

    <script>

    </script>

{% endblock %}