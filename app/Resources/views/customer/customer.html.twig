{% extends 'base.html.twig' %}

{% block title %} Customers {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block navblock %}
    {{ parent() }}

    <form class="nav navbar-form navbar-left" action="" method="post">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Customers" name="search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
    <ul class="nav navbar-nav navbar-right">
        <li><a href={{ path('customerAdd') }}>Add Customers</a></li>
    </ul>

{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div>
        <main>
            <center>
                <h3>Customers</h3>
                <div class="container">
                    <div class="row" style="overflow: auto; white-space: nowrap">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Customer Name</th>
                                <th>NIC</th>
                                <th>Address</th>
                                <th>Mobile</th>
                                <th>Fixed</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for customer in customers %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ customer.name }}</td>
                                    <td>{{ customer.nic }}</td>
                                    <td>{{ customer.address }}</td>
                                    <td>{{ customer.mobile }}</td>
                                    <td>{{ customer.fixed }}</td>
                                    <td><a class="btn btn-default btn-sm"
                                           href={{ path('customerView', {'id': customer.id}) }}>View</a></td>
                                    <td><a class="btn btn-default btn-sm"
                                           href={{ path('customerEdit', {'id': customer.id}) }}>Edit</a></td>
                                    <td>
                                        <form action="{{ path('loan') }}" method="post">
                                            <button type="submit" class="btn btn-default btn-sm" name="customerId"
                                                    value="{{ customer.id }}">Loans
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(customers) }}
                </div>
            </center>
        </main>
    </div>

    <script>

    </script>

{% endblock %}