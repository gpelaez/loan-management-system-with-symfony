{% extends 'base.html.twig' %}

{% block title %} Installments {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block navblock %}
    {{ parent() }}

    <form class="nav navbar-form navbar-left" action="" method="post">
        <div class="input-group">
            <input type="date" class="form-control" placeholder="Search Installments" name="search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
    <ul class="nav navbar-nav navbar-right">
        <li><a href={{ path('installmentAdd') }}>Add Installments</a></li>
    </ul>

{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div>
        <main>
            <center>
                <h3>Installments</h3>
                <div class="container">
                    <div class="row" style="overflow: auto; white-space: nowrap">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Payment Date</th>
                                <th>Installment Amount</th>
                                <th>Customer Name</th>
                                <th>Customer NIC</th>
                                <th>Loan Code</th>
                                <th>Loan Amount</th>
                                <th>Loan Started Date</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for installment in installments %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ installment.paymentDate|date('Y-m-d') }}</td>
                                    <td>{{ installment.installmentAmount }}</td>
                                    <td>{{ installment.loan.customer.name }}</td>
                                    <td>{{ installment.loan.customer.nic }}</td>
                                    <td>{{ installment.loan.loanCode }}</td>
                                    <td>{{ installment.loan.loanAmount }}</td>
                                    <td>{{ installment.loan.startedDate|date('Y-m-d') }}</td>
                                    <td><a class="btn btn-default btn-sm"
                                           href={{ path('installmentView', {'id': installment.id}) }}>View</a></td>
                                    <td><a class="btn btn-default btn-sm"
                                           href={{ path('installmentEdit', {'id': installment.id}) }}>Edit</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(installments) }}
                </div>
            </center>
        </main>
    </div>

    <script>

    </script>

{% endblock %}