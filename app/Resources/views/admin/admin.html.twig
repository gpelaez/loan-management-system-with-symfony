{% extends 'base.html.twig' %}

{% block title %} Admins {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block navblock %}
    {{ parent() }}

    <form class="nav navbar-form navbar-left" action="" method="post">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Admins" name="search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
    <ul class="nav navbar-nav navbar-right">
        <li><a href={{ path('adminAdd') }}>Add Admins</a></li>
    </ul>

{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div>
        <main>
            <center>
                <h3>Admins</h3>
                <div class="container">
                    <div class="row" style="overflow: auto; white-space: nowrap">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Admin Name</th>
                                <th>Password</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for admin in admins %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ admin.name }}</td>
                                    <td>********</td>
                                    <td><a class="btn btn-default btn-sm"
                                           href={{ path('adminView', {'id': admin.id}) }}>View</a></td>
                                    <td><a class="btn btn-default btn-sm"
                                           href={{ path('adminEdit', {'id': admin.id}) }}>Edit</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(admins) }}
                </div>
            </center>
        </main>
    </div>

    <script>

    </script>

{% endblock %}